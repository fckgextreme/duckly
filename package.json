{
    "name": "auth-backend",
    "type": "module",
    "version": "1.0.0",
    "main": "dist-server/server.js",
    "scripts": {
        "dev": "tsx watch src/assets/server.ts",
        "dev:frontend": "vite --port 5173",
        "dev:wait": "wait-on http://localhost:8080/api/config && vite --port 5173",
        "dev:full": "concurrently -n \"SERVER,FRONTEND\" -c \"blue,green\" \"npm run dev\" \"npm run dev:wait\"",
        "build": "npm run build:server && npm run build:frontend",
        "build:server": "tsc",
        "build:frontend": "vite build",
        "start": "node dist-server/server.js",
        "pm2:start": "pm2 start ecosystem.config.js",
        "pm2:stop": "pm2 stop duckkly",
        "pm2:restart": "pm2 restart duckkly",
        "pm2:logs": "pm2 logs duckkly"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^7.0.1",
        "@fortawesome/free-brands-svg-icons": "^7.0.1",
        "@fortawesome/free-solid-svg-icons": "^7.0.1",
        "@fortawesome/vue-fontawesome": "^3.1.2",
        "@types/nodemailer": "^7.0.1",
        "axios": "^1.12.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.0",
        "marked": "^16.4.1",
        "nodemailer": "^7.0.6",
        "sqlite": "^4.2.0",
        "sqlite3": "^5.1.7",
        "uuid": "^9.0.0",
        "vue-router": "^4.5.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/node": "^20.0.0",
        "@types/sqlite3": "^3.1.9",
        "@types/uuid": "^10.0.0",
        "@vitejs/plugin-vue": "^6.0.1",
        "concurrently": "^9.2.1",
        "wait-on": "^7.2.0",
        "tsx": "^4.7.0",
        "typescript": "^5.0.0",
        "vite": "^7.1.5"
    }
}
